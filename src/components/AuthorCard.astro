---
interface Props {
  name: string;
  slug: string;
  bio: string;
  avatar: string;
  articleCount: number;
}

const { name, slug, bio, avatar, articleCount } = Astro.props;
---

<article class="group bg-white rounded-xl p-6 text-center shadow-card hover:shadow-hover transition-all duration-300">
  <a
    href={`/authors/${slug}/`}
    class="block focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 rounded-lg"
  >
    <header class="mb-4">
      <img
        src={avatar}
        alt={name}
        class="w-20 h-20 rounded-full object-cover mx-auto ring-4 ring-primary-50 transition-all duration-300 group-hover:ring-primary-100"
      />
      <h2 class="text-lg font-semibold text-gray-900 group-hover:text-primary-600 transition-colors mt-4">
        {name}
      </h2>
    </header>

    <p class="text-sm text-gray-600 line-clamp-2 mb-4">{bio}</p>

    <footer class="text-sm text-primary-600">
      {articleCount} {articleCount === 1 ? 'article' : 'articles'}
    </footer>
  </a>
</article>