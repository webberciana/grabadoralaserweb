---
import FooterNewsletter from './footer/FooterNewsletter.astro';
import FooterSocial from './footer/FooterSocial.astro';

const currentYear = new Date().getFullYear();

const links = {
  productos: [
    { name: 'Categorías', href: '/categories' },
    { name: 'Marcas', href: '/brands' },
    { name: 'Ofertas', href: '/ofertas' },
    { name: 'Novedades', href: '/novedades' }
  ],
  recursos: [
    { name: 'Blog', href: '/blog' },
    { name: 'Guías', href: '/guias' },
    { name: 'Reviews', href: '/reviews' },
    { name: 'FAQs', href: '/faqs' }
  ],
  empresa: [
    { name: 'Sobre Nosotros', href: '/sobre-nosotros' },
    { name: 'Contacto', href: '/contacto' }
  ],
  legal: [
    { name: 'Aviso Legal', href: '/aviso-legal' },
    { name: 'Política de Privacidad', href: '/politica-privacidad' },
    { name: 'Política de Cookies', href: '/politica-cookies' }
  ]
};
---

<footer class="bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top Section -->
    <div class="py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 border-b border-gray-800">
      {/* Newsletter Section */}
      <div class="lg:col-span-2">
        <FooterNewsletter />
      </div>

      {/* Quick Links */}
      <div class="grid grid-cols-2 gap-8 md:gap-12">
        <div>
          <h3 class="text-lg font-semibold text-white mb-4">Productos</h3>
          <ul class="space-y-3">
            {links.productos.map(link => (
              <li>
                <a href={link.href} class="text-gray-300 hover:text-primary-400 transition-colors">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-white mb-4">Recursos</h3>
          <ul class="space-y-3">
            {links.recursos.map(link => (
              <li>
                <a href={link.href} class="text-gray-300 hover:text-primary-400 transition-colors">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Company Info */}
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Empresa</h3>
        <ul class="space-y-3">
          {links.empresa.map(link => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-primary-400 transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="py-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="flex flex-col md:flex-row items-center gap-4">
          <p class="text-gray-400">
            © {currentYear} Laser Engraver Guide. Todos los derechos reservados.
          </p>
          <ul class="flex flex-wrap justify-center gap-4">
            {links.legal.map(link => (
              <li>
                <a href={link.href} class="text-gray-400 hover:text-primary-400 transition-colors text-sm">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <FooterSocial />
      </div>
    </div>
  </div>
</footer>