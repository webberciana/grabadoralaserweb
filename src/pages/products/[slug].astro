---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import data from '../../data';

// Obtener `product` desde `Astro.props`
const { product } = Astro.props;

// Buscar la marca del producto
const brand = data.brands.find(b => b.id === product.brand);

// Obtener categoría del producto
const category = data.categories.find((c) => c.id === product.category);

// Generar estrellas para la valoración del producto
const stars = Array.from({ length: 5 }, (_, i) => i < Math.floor(product.rating));

// Obtener productos relacionados (publicados y de la misma categoría)
// Mantiene compatibilidad con productos antiguos (category:string) y nuevos (categories:string[])
const now = new Date();

const currentCats = new Set(
  Array.isArray(product.categories)
    ? product.categories
    : product.category
      ? [product.category]
      : []
);

const getCats = (p) =>
  Array.isArray(p.categories)
    ? p.categories
    : p.category
      ? [p.category]
      : [];

// cuenta categorías compartidas
const sharedCount = (p) => getCats(p).reduce((acc, c) => acc + (currentCats.has(c) ? 1 : 0), 0);

const relatedProducts = data.products
  .filter((p) => {
    if (p.slug === product.slug) return false;
    const published = new Date(p.publishDate) <= now;
    const overlaps = getCats(p).some((c) => currentCats.has(c));
    return published && overlaps;
  })
  .sort((a, b) => {
    // 1) más categorías compartidas
    const diffShared = sharedCount(b) - sharedCount(a);
    if (diffShared !== 0) return diffShared;

    // 2) mejor rating
    const diffRating = (b.rating ?? 0) - (a.rating ?? 0);
    if (diffRating !== 0) return diffRating;

    // 3) más reciente
    return new Date(b.publishDate) - new Date(a.publishDate);
  })
  .slice(0, 3);

// Obtener las primeras tres categorías únicas del producto
const firstThreeCategories = product.categories
  .map((categoryId) => data.categories.find((c) => c.id === categoryId))
  .filter(Boolean) // Eliminar valores `undefined`
  .slice(0, 3);


// Función para obtener rutas estáticas
export async function getStaticPaths() {
  const now = new Date();
  const publishedProducts = data.products.filter(
    product => new Date(product.publishDate) <= now
  );
  
  return publishedProducts.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}
---

<Layout title={product.title} description={product.shortDescription}>
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <!-- Product Header -->
    <article class="bg-white rounded-3xl overflow-hidden shadow-sm mb-8">
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <!-- Main Image -->
        <figure class="p-8">
          <div class="aspect-h-1 bg-gray-50 rounded-2xl overflow-hidden">
            <img
              src={product.mainImage}
              alt={product.title}
              class="w-full h-full object-cover"
            />
          </div>
        </figure>

        <!-- Product Info -->
        <div class="p-8 lg:border-l border-gray-100 flex flex-col">
          <header class="flex-grow">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">{product.title}</h1>
            
            <div class="flex items-center gap-4 mb-6">
              <div class="flex gap-0.5">
                {stars.map((filled) => (
                  <svg
                    class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-gray-200'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="text-sm text-gray-600">{product.rating.toFixed(1)} rating</span>
              <time datetime={product.lastUpdated} class="text-sm text-gray-500">
                Última actualización: {new Date(product.lastUpdated).toLocaleDateString()}
              </time>
            </div>

            <p class="text-lg text-gray-600 mb-8">{product.shortDescription}</p>

            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl mb-6">
              <div class="flex flex-col">
                <span class="text-lg font-medium text-primary-600">Consultar disponibilidad</span>
              </div>
              <a
                href={product.affiliateUrl}
                class="inline-flex items-center px-6 py-3 text-base font-medium text-white bg-primary-600 rounded-xl hover:bg-primary-700 transition-colors"
                rel="nofollow"
                target="_blank"
              >
                Amazon
              </a>
            </div>
            {brand && (
              <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl mb-6">
                <img
                  src={brand.logo}
                  alt={`${brand.name} logo`}
                  class="w-16 h-16 object-contain"
                  style="border-radius:50%"
                />
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">
                    <a href={`/marcas/${brand.slug}`} class="hover:text-primary-600 transition-colors">
                      {brand.name}
                    </a>
                  </h3>
                  <p class="text-sm text-gray-600">Fabricante</p>
                </div>
              </div>
            )}
          </header>
        </div>
      </div>
    </article>

    <!-- Product Content -->
    <div class="grid gap-8">
      <!-- Information Section -->
      <section class="bg-white rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Análisis del {product.h1}</h2>
        <div class="prose max-w-none text-gray-600" set:html={product.information} />
      </section>

      <!-- CTA Section -->
      <section class="bg-white rounded-2xl p-8 mb-8">
        <div class="grid md:grid-cols-3 gap-8 items-center">
          <!-- Product Image -->
          <div class="md:col-span-1">
            <div class="aspect-w-1 aspect-h-1 bg-gray-50 rounded-xl overflow-hidden">
              <img
                src={product.mainImage}
                alt={product.h1}
                class="w-full h-full object-contain"
              />
            </div>
          </div>

          <!-- Product Info -->
          <div class="md:col-span-2 text-center md:text-left">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
              ¿Te interesa el {product.h1}?
            </h2>
            <p class="text-lg text-gray-600 mb-6">
              {product.priceQuote}
            </p>
            <a
              href={product.affiliateUrl}
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-primary-600 rounded-full hover:bg-primary-700 transition-colors duration-300 shadow-lg hover:shadow-xl"
              rel="nofollow"
              target="_blank"
            >
              Ver Oferta en Amazon
              <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      </section>

      <!-- Expert Opinion Section -->
      <section class="bg-white rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Nuestra opinión sobre el {product.h1}</h2>
        <div class="prose max-w-none mb-8 text-gray-600" set:html={product.expertOpinion.content} />
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Pros y contras del  {product.h1}</h3>
        <div class="grid md:grid-cols-2 gap-8 mb-8">
          <div class="bg-green-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-green-700 mb-4">Ventajas</h3>
            <ul class="space-y-3">
              {product.expertOpinion.pros.map((pro) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">{pro}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="bg-red-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-red-700 mb-4">Desventajas</h3>
            <ul class="space-y-3">
              {product.expertOpinion.cons.map((con) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-red-500 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">{con}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="bg-primary-50 rounded-xl p-6 text-center">
          <div class="text-4xl font-bold text-primary-700 mb-2">{product.expertOpinion.rating}/10</div>
          <p class="text-primary-600">Puntuación de nuestros expertos</p>
        </div>
      </section>

      <!-- Reviews Section -->
      <section class="bg-white rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Las mejores reviews sobre {product.h1}</h2>
        {product.reviewsAnalysis && (
          <p class="text-gray-600 mb-6">{product.reviewsAnalysis}</p>
        )}
        <div class="grid gap-6">
          {product.reviews.map((review) => (
            <article class="bg-gray-50 rounded-xl p-6">
              <div class="flex gap-0.5 mb-3">
                {Array.from({ length: 5 }, (_, i) => i < review.rating).map((filled) => (
                  <svg
                    class={`w-4 h-4 ${filled ? 'text-yellow-400' : 'text-gray-200'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <blockquote class="text-gray-600 mb-3">{review.content}</blockquote>
              <footer>
                <cite class="text-sm font-medium text-gray-900 not-italic">{review.name}</cite>
              </footer>
            </article>
          ))}
        </div>
      </section>

      <!-- Product Images Section -->
      <section class="bg-white rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Imágenes del {product.h1}</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {product.images.map((image) => (
            <figure class="aspect-w-4 aspect-h-3 bg-gray-50 rounded-xl overflow-hidden">
              <img
                src={image}
                alt={`${product.h1} en detalle`}
                class="w-full h-full object-cover"
              />
            </figure>
          ))}
        </div>
      </section>

      <!-- Video Review Section -->
      {product.videoReview && (
        <section class="bg-white rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Video Review del {product.h1}</h2>
          {product.videoReview.description && (
            <p class="text-gray-600 mb-6">{product.videoReview.description}</p>
          )}
          <div class="aspect-w-16 aspect-h-9 bg-gray-50 rounded-xl overflow-hidden">
            <iframe
              src={`https://www.youtube.com/embed/${product.videoReview.youtubeId}`}
              title={product.videoReview.title}
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="w-full h-full"
            ></iframe>
          </div>
        </section>
      )}

      <!-- Additional Info Section -->
      <section class="bg-white rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Información adicional sobre el {product.h1}</h2>
        <div class="prose max-w-none text-gray-600 mb-8" set:html={product.additionalInfo} />

        <h3 class="text-xl font-bold text-gray-900 mb-4">Especificaciones técnicas</h3>
        <p class="text-gray-600 mb-6">A continuación te mostramos las especificaciones técnicas detalladas de este modelo para que puedas conocer todas sus características.</p>
        <dl class="grid gap-4 md:grid-cols-2">
          {Object.entries(product.specifications).map(([key, value]) => {
            // Reemplazar _ por espacio y capitalizar primera letra
            const formattedKey = key
              .replace(/_/g, " ") // quita los guiones bajos
              .replace(/^\w/, (c) => c.toUpperCase()); // mayúscula inicial
        
            return (
              <div class="bg-gray-50 rounded-xl p-4">
                <dt class="text-sm font-medium text-gray-500 mb-1">{formattedKey}</dt>
                <dd class="text-sm font-medium text-gray-900">
                  {Array.isArray(value) ? value.join(", ") : value}
                </dd>
              </div>
            );
          })}
        </dl>

        <div class="mt-8 space-y-4">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Preguntas frecuentes sobre el {product.h1}</h3>
          {product.faqs.map((faq, index) => (
            <details class="group bg-gray-50 rounded-xl" {...index === 0 && { open: true }}>
              <summary class="flex justify-between items-center cursor-pointer p-6">
                <h4 class="text-lg font-medium text-gray-900">{faq.question}</h4>
                <span class="ml-6 flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-gray-400 group-open:rotate-180 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </span>
              </summary>
              <div class="px-6 pb-6">
                <p class="text-gray-600">{faq.answer}</p>
              </div>
            </details>
          ))}
        </div>
      </section>



      <!-- Categories Section -->
      <section class="bg-white rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Explora otras categorías</h2>
        <div class="grid gap-6 md:grid-cols-3">
          {firstThreeCategories.map((cat) => (
            <a 
              href={`/categories/${cat.slug}`}
              class="group relative overflow-hidden rounded-xl bg-gray-50 aspect-w-16 aspect-h-9"
            >
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/75 to-gray-900/0 z-10"></div>
              <div class="absolute inset-0 flex items-center justify-center z-20">
                <h3 class="text-xl font-bold text-white text-center px-4">
                  {cat.title}
                </h3>
              </div>
            </a>
          ))}
        </div>
      </section>


      <!-- Related Products -->
      {relatedProducts.length > 0 && (
        <section class="pt-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Productos relacionados</h2>
          <div class="grid gap-8 md:grid-cols-3">
            {relatedProducts.map((related) => (
              <ProductCard {...related} />
            ))}
          </div>
        </section>
      )}
    </div>
  </div>
</Layout>